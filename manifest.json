{
    "name": "URL to clipboard",
    "version": "1.0.0",
    "description": "Copy the current URL instantly to your clipboard",
    "manifest_version": 2,
    "icons": {
        "24": "assets/images/clipboard-outline-24.png",
        "36": "assets/images/clipboard-outline-36.png",
        "48": "assets/images/clipboard-outline-48.png"
    },
    "page_action": {
        "default_icon": {
            "24": "assets/images/clipboard-outline-24.png",
            "36": "assets/images/clipboard-outline-36.png",
            "48": "assets/images/clipboard-outline-48.png"
        },
        "default_title": "Copy URL"
    },
    "background": {
        "scripts": [
            "main.js"
        ]
    },
    "permissions": [
        "tabs",
        "clipboardWrite"
    ]
}